
<div class="container">
  <% if signed_in? %>
    <% provide(:title, 'Home') %>
    <% unless @link_users.empty? %>
      <div class="span8">
        <section>
        <%= render 'shared/link_form' %>
        </section>
        <ol class="links">
          <%= render @link_users %>
        </ol>
        <%= will_paginate @link_users %>
      </div>
    <% else %>
      <span class="head_intro"><h3> Start sharing links with the appropriate topic community </h3></span>
      <br/>

      <div class="arrow_box">
        <span class="up_explain"><i class="icon-caret-up icon-large"></i></span>
        <span class="exp_explain">   <h5> Click Explore to find new topics, people and links </h5></span>
      </div>
      <div class="span8">
        <section>
        <%= render 'shared/link_form_new' %>
        </section>
      </div>
    <% end %>

  <% else %>
    <% cache "front", expires_in: 2.minutes do %>
      <% provide(:title, 'What is the best thing you saw on the Internet today?. Lets go..' ) %>
      <span class="exp_explain">   <h3> Sign in to share the best thing you saw on the internet today.  </h3></span>
      <ol class="links">
        <%= render @link_users if @link_users %>
      </ol>
      <span class="span8"> <%= will_paginate @link_users %></span>
    <% end %>
    <!--
    -<%= render 'shared/sign_in_fixed' %>
    -->
  <% end %>
</div>
