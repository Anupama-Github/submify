<% cache "#{comment.id}_comment" do %>
  <div class="timestamp">
    <% if comment.commentable_type == 'Link' %>
      <%= link_to timing(comment.created_at), link_comment_path(comment.commentable, comment) %>
    <% else %>
      <%= timing(comment.created_at) %>
    <% end %>
  </div>
    <%= image_tag (comment.user.avatar.url(:thumb)), class: "comment-image" %>

    <div class="user_link">
      <span class="user">
        <%= link_to comment.user_name, comment.user, class: 'profile_hover', data: { hovercard: comment.user.id } %>
      </span>
    </div>
     <div class="expandable"> <%= comment.body %></div>
  <% end %>
