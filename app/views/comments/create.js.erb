<% vid = @parent.class.to_s.downcase+'-'+@parent.id.to_s %>
<% if @parent.class.to_s == "Link"%>
  $('.full_comments').prepend("<%= escape_javascript render('comments/comment', comment: @comment ) %>");
  $(".<%= vid %>  > .link_contain > .show-comments").html("<%= pluralize(@parent.comments.count,"comment") %>");
$('#comment_text').val("");
<% else %>

  $(".<%=vid %>  > #comment-comments").append("<%= escape_javascript render('comments/comment', comment: @comment ) %>");
  $(" #comment_text").val(" ");
$(".<%= vid %> > .show_comment").html("<%=  @parent.comments.count %>");
<% end %>
$('#flash').html("<%= escape_javascript raw(flash_display) %>");
