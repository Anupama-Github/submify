<% vid = @parent.class.to_s.downcase+'-'+@parent.id.to_s %>
<% if @parent.class.to_s == "Link"%>
  $('.full_comments').prepend("<%= escape_javascript render('comments/comment', comment: @comment ) %>");
$('#comment_text').val("");
<% else %>

  $(".<%=vid %> > .span8 > #comment-comments").append("<%= escape_javascript render('comments/comment', comment: @comment ) %>");
  $(" #comment_text").val(" ");
<% end %>
$(".<%= vid %> > .span8  > .show_comment").html("<%=  @parent.comments.count %>");
$(".<%= vid %> > .show_comment").html("<%=  @parent.comments.count %>");
