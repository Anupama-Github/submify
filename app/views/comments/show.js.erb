<% if @comments.all.count>0 %>
  $(".comment-<%= @comment.id %> >  #comment-comments").append('<%= escape_javascript(render(partial: 'comments/comment', collection: @comments)) %>');
  <% if @downvoted_comments %>
    $('.comment-<%= @comment.id%> > #comment-comments').append('<%= j content_tag(:div, (link_to "Show downvoted replies", downvoted_comment_path(@comment), remote: true), class: 'downvoted' )%>') 
      <% end %>
<% end -%>
  $(".comment-<%= @comment.id %> > .comments-form").append('<%= escape_javascript(render(partial: 'shared/comment_form')) %>');
  $(".comment-<%= @comment.id %>  .show_comment").html('<%= pluralize(@comment.comments.count, "reply") %>');
  $("div.expandable").expander();
