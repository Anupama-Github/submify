<% if @links.all.count>0 %>
  $('.links').append('<%= escape_javascript(render(partial: 'links/link', collection: @links)) %>');
  $('a.hook-topic').attr('href', '<%= topics_path(page: (params[:page].to_i || 1)+1, per_page: params[:per_page] || 15) %>').show();
<% else -%>
  $('a.hook-topic').hide();
<% end -%>
