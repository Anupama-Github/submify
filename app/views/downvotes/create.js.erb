<% if @votable.is_a? LinkUser %>
  <% vid = "link-#{@votable.id.to_s}" %>
  $(".<%= vid %> > .topic_detail > .tdvote").html("<%= escape_javascript render('downvotes/downvote_button', votable: @votable) %>");

  $(".<%=vid %> > .link_contain > .lu_box > #topic-downvote").html("<%= escape_javascript render('downvotes/downvote_button', votable: @votable) %>");
  $(".<%= vid %>  > .link_contain > .lu_box > .downvotes").html("<%=  @votable.downvotes.count %>");
<% else %>
  <% vid = @votable.class.to_s.downcase+'-'+@votable.id.to_s %>
  $(".<%=vid %> > .comment-downvote").html("<%= escape_javascript render('downvotes/downvote_button', votable: @votable) %>");
  $(".<%= vid %>  > .downvotes").html("<%=  @votable.downvotes.count %>");
<% end %>
