<% if @votable.is_a? LinkUser %>
<% vid = "link"+'-'+@votable.link.id.to_s %>
$(".<%= vid %>  > .link_contain > #topic-downvote").html("<%= escape_javascript render('downvotes/downvote_button', votable: @votable) %>");
$(".<%= vid %>  > .link_contain > .downvotes").html(" <%=  @votable.downvotes.count %>");
<% else %>
<% vid = @votable.class.to_s.downcase+'-'+@votable.id.to_s %>
$(".<%= vid %>  > .comment-downvote").html("<%= escape_javascript render('downvotes/downvote_button', votable: @votable) %>");
$(".<%= vid %>  > .downvotes").html("<%=  @votable.downvotes.count %>");
<% end %>
