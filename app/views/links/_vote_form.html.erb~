
  <div id="vote_form">
  <% if current_user.link_users %>
    <%= form_for(current_user.link_users.find_by_link_id(@feed_item.id),
             html: { method: :delete },
             remote: true) do |f| %>
  <%= f.submit "Unvote" %>
<% end %>
  <% else %>
    <%= form_for(current_user.link_users.create!(link_id: @feed_item.id),
             remote: true) do |f| %>
  <div><%= f.hidden_field :link_id %></div>
  <%= f.submit "Follow" %>
<% end %>
  <% end %>
  </div>

