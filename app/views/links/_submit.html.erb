<% if signed_in? %>
<% if link.users.exists? current_user %>
	<%= form_for link, :html => { :method => :delete }, remote: true do |f| %>
          <%= f.hidden_field :id, value: link.id %>
		<%= f.submit "Unsubmit", class: "butn" %>
	<% end %>
<% else %>
	<%= form_for :link, url: submit_link_path(link), remote: true do |f| %>
                <%= f.hidden_field :id, value: link.id %>
		<%= f.submit "submit", class: "butn" %>
	<% end %>
      <% end %>
    <% end %>
