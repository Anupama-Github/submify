<% cache "link_#{link.id}" do %>
  <% if /youtube.com|vimeo.com|twitter.com|soundcloud.com/.match(link.url_link) %>
    <div class="video_embedd">
    <%= video_preview(link.url_link) %>
    <br/>
  </div>
    <% else %>
      <%= link_to image_tag(link.avatar.url, class: 'link-image') , link.avatar.url(:medium), data: { colorbox: true } if link.avatar.exists? %>
      <span class="link_url"><%= link_to link.url_heading, 'http://' + link.url_link %> </span>

    <% host = 'http://'+ link.url_link %>
    <span class="host_link">
      <%= link_to host.match(".+\:\/\/([^\/]+)")[1], host %> 
    </span>
  <% end %>
<% end %>
