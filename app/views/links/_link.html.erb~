<li>
<span class="url_link"><%= link_to link.url_heading, 'http://' + link.url_link %> </span>

<% host = 'http://'+ link.url_link %>

<%= host.match(".+\:\/\/([^\/]+)")[1]  %> 

<span class="timestamp">
  Posted <%= time_ago_in_words(link.created_at) %> ago
</span>

<% if link.users.exists? current_user %>
  <%= link_to "delete", link, method: :delete, data: { confirm: "You sure?" }, title: link.url_link %>
<% end %>
</li>

