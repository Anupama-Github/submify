<% if @link_users.all.count>0 %>
  $('.links').append('<%= escape_javascript(render(partial: 'users/link_user', collection: @link_users)) %>');
  $('a.hook-user').attr('href', '<%= user_path(@user,page: (params[:page].to_i || 1)+1, per_page: params[:per_page] || 15) %>').show();
<% else -%>
  $('a.hook-topic').hide();
<% end -%>
