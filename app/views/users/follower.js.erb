<% tab "followers" %>
$('.stats_of_user').html('<%= escape_javascript(render 'shared/stats') %>')
  $('.show-commented').html('')
  $('.links').html('')
  <% if @users.all.count >0 %>
  <% params[:page] = 1 %>
 
  $('.users').html('<%= escape_javascript(render partial: 'users/user', collection: @users, cache: true) %>');
    $('a.kooh').attr('href', '<%= followers_user_path(@user,page: (params[:page].to_i || 1)+1, per_page: params[:per_page] || 15) %>').show();
<% else -%>
  $('a.kooh').hide();
<% end -%>
