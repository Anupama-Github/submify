<% if @comments.all.count>0 %>
  $('.show-commented').append('<%= escape_javascript(render partial: 'comments/comment', collection: @comments, cache: true) %>');
    $('a.kooh').attr('href', '<%= commented_user_path(@user,page: (params[:page].to_i || 1)+1, per_page: params[:per_page] || 15) %>').show();
<% else -%>
  $('a.kooh').hide();
<% end -%>
