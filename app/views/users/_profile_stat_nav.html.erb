<aside> 
<div class="follow_button user-<%= @user.id %>">  <%= render 'follow_form', user: @user if signed_in? %> </div>
<% cache @user do %>
<h3>
   <%= image_tag (@user.avatar.url(:medium)), class: "gravatar" %>
  <%= @user.name %>
</h3>

<div class="expandable"><%= @user.description %></div>
<div class="stats_of_user">
<%= render 'shared/stats' %>
</div>
<% end %>
</aside>
