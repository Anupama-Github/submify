

<li id="<%= feed_item.id %>">

<% host = 'http://'+ feed_item.url_link %>

<div class="host_link">
<%= link_to host.match(".+\:\/\/([^\/]+)")[1], host.match(".+\:\/\/([^\/]+)")[1] %> 
</div>
<div class="link_url">
<span class="url_link"><%= link_to feed_item.url_heading, 'http://' + feed_item.url_link %> </span>
</div>
<div class= "row_of_linkstats">
<div id="vote_form">
  <% if current_user.link_users %>
    <%= form_for(current_user.link_users.find_by_link_id(feed_item.id),
             html: { method: :delete },
             remote: true) do |f| %>
  <%= f.submit "Unvote" %>
<% end %>
  <% else %>
    <%= form_for(current_user.link_users.create!(link_id: feed_item.id),
             remote: true) do |f| %>
  <div><%= f.hidden_field :link_id %></div>
  <%= f.submit "Follow" %>
<% end %>
  <% end %>
  </div>
<div class="comments">
<%= link_to feed_item.comments.count.to_s + ' comments', feed_item %>
</div>
<div class="user_image">
<% feed_item.users.each do |user| %>
<%= link_to gravatar_for(user, size: 30), user %>
<% end %>
</div>
</div>
</li>


