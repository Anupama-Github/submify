<li id="<%= feed_item.id %>
<% feed_item.users.each do |user| %>

<%= link_to gravatar_for(user), user %>
<span class="user">
  <%= link_to user.name, user %>
</span>
<% end %>

<span class="url_link"> <%= feed_item.url_link %> </span>
<span class="timestamp">
  Posted <%= time_ago_in_words(feed_item.create_at) %> ago
</span>
<% if feed_item.users.exists? current_user %>

  <%= link_to "delete", feed_item, method: :delete, data: { confirm: "You sure?" }, title: feed_item.url_link %>
<% end %>
</li>

