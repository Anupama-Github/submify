<div class="span8">
<% if signed_in? %>
<% name , val = nil %>
<% name = @topic.name and val= @topic.id if @topic %>
<%= form_for @link , remote: true do |f| %>
  <div class="field">
    <%= f.text_area :url_link, placeholder: "Submit the best thing you saw on the Internet today ", id: "complete_url"%>

    <%= text_field_tag 'topic_name', name , class: 'link-topic-tag', placeholder: "Topic name(only one)" %>
   <%= hidden_field_tag 'topic_val', val  %>
    <%= f.submit "Submit", class: "btn btn-small gif-load", id: "submit_button"%>
  </div>
<% end %>

<% end %>
</div>
