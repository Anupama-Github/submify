<% name = nil %>
<% name = @topic.name if @topic %>
<%= form_for @link , remote: true do |f| %>
  <div class="field">
    <%= f.text_area :url_link, placeholder: "Submit a link...", id: "complete_url"%>
    <%= text_field_tag 'topic_name', name , class: 'link-topic-tag' %>
    <%= f.submit "Submit", class: "btn btn-small gif-load", id: "submit_button"%>
  </div>
   <%= image_tag("ajax-loader.gif", class:  "loading-indicator") %>
<% end %>

