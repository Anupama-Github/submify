<div class="container-fluid">
  <div class="row-fluid">
    <div class="span4">
      <div class="well sidebar-nav sidebar-nav-fixed sidebar-rel">
        <h4> Suggested Topics </h4>
        <ul class="users">
          <% @topics.each do |topic| %>
            <li>
            <%= image_tag (topic.avatar.url(:medium)), class: "gravatar" %>
            <%= link_to topic.name, topic, class: 'topic_hover', data: {hovercard: topic.id} %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
